{% extends 'base.html.twig' %}

{% block title %}ImageSide index{% endblock %}

{% block body %}
    <h1>ImageSide index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pictures</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image_side in image_sides %}
            <tr>
                <td>{{ image_side.id }}</td>
                <td>{{ image_side.pictures }}</td>
                <td>
                    <a href="{{ path('app_image_side_show', {'id': image_side.id}) }}">show</a>
                    <a href="{{ path('app_image_side_edit', {'id': image_side.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_image_side_new') }}">Create new</a>
{% endblock %}
